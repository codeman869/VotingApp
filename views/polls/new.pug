include ../includes/bootstrap.pug
include ../includes/menu.pug
.container
    .row
        .col-md-offset-3.col-md-6
            form.form(action='/polls/new' method='POST')
                .form-group
                    label(for='question') Question
                    input.form-control(type='text' name='question' placeholder='Question')
                .form-group
                    label(for='option1') Option 1
                    input.form-control(type='text' name='option1' placeholder='Option 1')
                .form-group
                    label(for='option2') Option 2
                    input.form-control(type='text' name='option2' placeholder='Option 2')
                .form-group
                    button.btn.btn-primary(type='submit') 
                        span.glyphicon.glyphicon-plus
                        | &nbsp; New Poll
