include ./includes/bootstrap.pug
include ./includes/menu.pug
include ./includes/jquery.pug
script(src='/scripts/signup.js')
.container
    .row
        .col-md-6.col-md-offset-3
            form.form(action='/signup' method='POST')
                .form-group
                    label(for='username') Username
                    input.form-control(type='text' name='username' placeholder='Username' required pattern=".{3,20}")
                .form-group
                    label(for='password') Password
                    input.form-control(type='password' name='password' placeholder='Password' required pattern=".{3,20}")
                .form-group
                    label(for='password-confirm') Confirm Password
                    input.form-control(type='password' name='password-confirm' placeholder='Confirm Password' required pattern=".{3,20}")
                .form-group
                    button.btn.btn-primary(type='submit') 
                        span.glyphicon.glyphicon-user
                        | Sign Up